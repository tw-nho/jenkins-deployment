{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "This is for deploying Jenkins",
  "Parameters": {
    "ApplicationName": {
      "Default": "nho-jenkins",
      "Description": "Elastic Beanstalk Application Name.",
      "Type": "String"
    }
  },
  "Resources": {
    "EbApplication": {
      "Type": "AWS::ElasticBeanstalk::Application",
      "Properties": {
        "ApplicationName": {
          "Ref": "ApplicationName"
        },
        "Description": ""
      }
    },
    "EbApplicationVersion": {
      "Type": "AWS::ElasticBeanstalk::ApplicationVersion",
      "Properties": {
        "SourceBundle": "../../",
        "ApplicationName": {
          "Ref": "ApplicationName"
        },
        "Description": "AWS ElasticBeanstalk Sample Application Version"
      },
      "DependsOn": "EbApplication"
    },
    "EbEnvironment": {
      "Type": "AWS::ElasticBeanstalk::Environment",
      "Properties": {
        "ApplicationName": {
          "Ref": "ApplicationName"
        },
        "Description": "",
        "EnvironmentName": "nho-jenkins",
        "SolutionStackName": "64bit Amazon Linux 2018.03 v2.12.6 running Docker 18.06.1-ce",
        "OptionSettings": [
          {
            "Namespace": "aws:elasticbeanstalk:environment",
            "OptionName": "EnvironmentType",
            "Value": "SingleInstance"
          },
          {
            "Namespace": "aws:autoscaling:launchconfiguration",
            "OptionName": "InstanceType",
            "Value": "t2.small"
          },
          {
            "Namespace": "aws:autoscaling:launchconfiguration",
            "OptionName": "EC2KeyName",
            "Value": "beijing-tw-nho-key-pair"
          },
          {
            "Namespace": "aws:autoscaling:launchconfiguration",
            "OptionName": "IamInstanceProfile",
            "Value": "JekninsInstanceProfile"
          }
        ],
        "VersionLabel": {
          "Ref": "EbApplicationVersion"
        }
      },
      "DependsOn": [
        "EbApplicationVersion",
        "JekninsInstanceProfile"
      ]
    },
    "JekninsInstanceProfile": {
      "Type": "AWS::IAM::InstanceProfile",
      "Properties": {
        "Roles": [
          "jeknins-role"
        ],
        "InstanceProfileName": "JekninsInstanceProfile"
      },
      "DependsOn": "JekninsRole"
    },
    "JekninsRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": "jeknins-role",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "ec2.amazonaws.com.cn"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "JenkinsPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "*",
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    }
  }
}